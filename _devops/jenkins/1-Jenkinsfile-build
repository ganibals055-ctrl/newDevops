pipeline {
    agent any
    
    options {
        skipDefaultCheckout(true)
        timeout(time: 30, unit: 'MINUTES')
        retry(1) // Попробовать еще раз при ошибке
    }

    environment {
        SHARED_WS = '/var/jenkins_home/workspace/doggo_nexus'
        DEPLOY_PATH = '_devops/k8s'
        REGISTRY = "localhost:5000"
        REGISTRY_MINIKUBE = "host.minikube.internal:5000"
        IMAGE_RANDOM = "doggo-random-service"
        IMAGE_RATING = "doggo-rating-service"
        // Явно указываем KUBECONFIG
        KUBECONFIG = "/var/jenkins_home/.kube/config"
    }

    stages {
        stage('Checkout') {
            steps {
                dir(env.SHARED_WS) {
                    checkout scm
                }
                script {
                    dir(env.SHARED_WS) {
                        env.VERSION = sh(returnStdout: true, script: "git rev-parse --short HEAD").trim()
                        echo "VERSION = ${env.VERSION}"
                    }
                }
            }
        }

        stage('Docker build') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Собираем Docker образы ==="
                        docker build -t ${REGISTRY}/${IMAGE_RANDOM}:${VERSION} DogRandomService
                        docker build -t ${REGISTRY}/${IMAGE_RATING}:${VERSION} DogRatingService
                    """
                }
            }
            post {
                failure {
                    echo "❌ Ошибка при сборке Docker образов"
                }
            }
        }

        stage('Push to registry') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Пушим образы в registry ==="
                        docker login ${REGISTRY} -u user -p user
                        docker push ${REGISTRY}/${IMAGE_RANDOM}:${VERSION}
                        docker push ${REGISTRY}/${IMAGE_RATING}:${VERSION}
                        docker rmi ${REGISTRY}/${IMAGE_RANDOM}:${VERSION} || true
                        docker rmi ${REGISTRY}/${IMAGE_RATING}:${VERSION} || true
                    """
                }
            }
            post {
                failure {
                    echo "❌ Ошибка при push в registry"
                }
            }
        }

        stage('Deploy to k8s') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Деплой в Kubernetes ==="
                        
                        # Проверяем доступ к кластеру
                        kubectl cluster-info
                        
                        # Подготавливаем манифесты с актуальными тегами образов
                        cp ${DEPLOY_PATH}/doggo-deployment.yaml ${DEPLOY_PATH}/doggo-deployment-temp.yaml
                        cp ${DEPLOY_PATH}/doggo-rating-deployment.yaml ${DEPLOY_PATH}/doggo-rating-deployment-temp.yaml
                
                        sed -i "s|image-doggo-replace|${REGISTRY_MINIKUBE}/${IMAGE_RANDOM}:${VERSION}|g" ${DEPLOY_PATH}/doggo-deployment-temp.yaml
                        sed -i "s|image-rating-replace|${REGISTRY_MINIKUBE}/${IMAGE_RATING}:${VERSION}|g" ${DEPLOY_PATH}/doggo-rating-deployment-temp.yaml
                
                        # Применяем манифесты
                        kubectl apply -f ${DEPLOY_PATH}/configmap.yaml
                        kubectl apply -f ${DEPLOY_PATH}/secret.yaml
                        kubectl apply -f ${DEPLOY_PATH}/nexus-secret.yaml
                        kubectl apply -f ${DEPLOY_PATH}/postgres.yaml
                
                        echo "Ждем запуска PostgreSQL..."
                        sleep 15
                        kubectl wait --for=condition=ready pod -l app=postgres --timeout=60s
                
                        # Деплоим основные сервисы
                        kubectl apply -f ${DEPLOY_PATH}/doggo-deployment-temp.yaml
                        kubectl apply -f ${DEPLOY_PATH}/doggo-rating-deployment-temp.yaml
                
                        # Очищаем временные файлы
                        rm -f ${DEPLOY_PATH}/*-temp.yaml
                        
                        echo "=== Деплой завершен ==="
                        kubectl get pods
                    """
                }
            }
            post {
                success {
                    echo "✅ Успешно задеплоено в Kubernetes!"
                    sh """
                        echo "Текущие pods:"
                        kubectl get pods
                    """
                }
                failure {
                    echo "❌ Ошибка при деплое в Kubernetes"
                    sh """
                        echo "Логи последних pod'ов:"
                        kubectl logs -l app=doggo --tail=50 || true
                        kubectl logs -l app=doggo-rating --tail=50 || true
                    """
                }
            }
        }
        
        stage('Verify deployment') {
            steps {
                sleep 30  // Даем время подняться pod'ам
                sh """
                    echo "=== Проверка деплоя ==="
                    kubectl get pods
                    kubectl get services
                    
                    echo "Проверяем ready pods..."
                    kubectl wait --for=condition=ready pod -l app=doggo --timeout=30s || echo "Doggo service не готов"
                    kubectl wait --for=condition=ready pod -l app=doggo-rating --timeout=30s || echo "Doggo-rating service не готов"
                """
            }
        }
    }

    post {
        always {
            echo "=== [ALWAYS] Финальная очистка ==="
            sh """
                docker logout ${REGISTRY} 2>/dev/null || true
                echo "Docker logout выполнен"
            """
            
            // Можно сохранить логи или артефакты
            archiveArtifacts artifacts: '**/target/*.jar,**/*.log', allowEmptyArchive: true
            
            cleanWs()
            echo "Workspace очищен"
        }
        
        success {
            echo "✅ ✅ ✅ PIPELINE УСПЕШНО ЗАВЕРШЕН! ✅ ✅ ✅"
            echo "Сервисы развернуты в Kubernetes"
            echo "Проверить: kubectl get pods, kubectl get services"
        }
        
        failure {
            echo "❌ ❌ ❌ PIPELINE ЗАВЕРШИЛСЯ С ОШИБКОЙ ❌ ❌ ❌"
            echo "Для ручной очистки выполните:"
            echo "  kubectl delete -f ${SHARED_WS}/${DEPLOY_PATH} --ignore-not-found=true"
            echo "  kubectl delete pvc postgres-data --ignore-not-found=true"
            
            // НЕ пытаемся автоматически удалять - это вызывает дополнительные ошибки
            // Просто логируем что нужно сделать вручную
        }
        
        unstable {
            echo "⚠️ Pipeline нестабилен"
        }
    }
}