pipeline {
    agent any
    
    options {
        skipDefaultCheckout(true)
        timeout(time: 30, unit: 'MINUTES')
        retry(1)
    }

    environment {
        SHARED_WS = '/var/jenkins_home/workspace/doggo_nexus'
        DEPLOY_PATH = '_devops/k8s'
        NEXUS_PATH = '_devops/nexus'
        
        // Пробуем разные адреса для Nexus
        NEXUS_HOST = "host.docker.internal"  # для Docker контейнеров
        // ИЛИ если Jenkins на хосте: localhost
        // ИЛИ если в Minikube: host.minikube.internal
        
        REGISTRY_PORT = "5000"
        NEXUS_UI_PORT = "8081"
        
        IMAGE_RANDOM = "doggo-random-service"
        IMAGE_RATING = "doggo-rating-service"
        
        // Credentials для Nexus
        NEXUS_USER = "user"
        NEXUS_PASSWORD = "user"
        
        // Minikube registry (для деплоя в k8s)
        REGISTRY_MINIKUBE = "host.minikube.internal:5000"
    }

    stages {
        stage('Checkout and Setup') {
            steps {
                dir(env.SHARED_WS) {
                    checkout scm
                }
                script {
                    dir(env.SHARED_WS) {
                        env.VERSION = sh(returnStdout: true, script: "git rev-parse --short HEAD").trim()
                        echo "VERSION = ${env.VERSION}"
                    }
                }
            }
        }

        stage('Start Nexus if needed') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Проверяем Nexus ==="
                        
                        # Проверяем, запущен ли уже Nexus
                        if docker ps | grep -q nexus3; then
                            echo "✓ Nexus уже запущен"
                        else
                            echo "Запускаем Nexus из папки ${NEXUS_PATH}..."
                            cd ${NEXUS_PATH}
                            docker-compose up -d
                            sleep 10  # Ждем запуска
                        fi
                        
                        # Проверяем доступность
                        echo "Проверяем доступность Nexus UI..."
                        if curl -s --retry 5 --retry-delay 3 --max-time 10 http://${NEXUS_HOST}:${NEXUS_UI_PORT} > /dev/null; then
                            echo "✓ Nexus UI доступен"
                        else
                            echo "✗ Nexus UI недоступен по адресу http://${NEXUS_HOST}:${NEXUS_UI_PORT}"
                            echo "Пробуем localhost..."
                            if curl -s --max-time 5 http://localhost:${NEXUS_UI_PORT} > /dev/null; then
                                echo "✓ Nexus доступен через localhost"
                                export NEXUS_HOST="localhost"
                            else
                                echo "Проверьте что Nexus запущен: docker-compose up в папке nexus"
                                exit 1
                            fi
                        fi
                    """
                }
            }
        }

        stage('Configure Nexus Docker Registry') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Настраиваем Docker Registry в Nexus ==="
                        
                        # Ждем полного запуска Nexus
                        sleep 5
                        
                        # Проверяем доступность Docker registry
                        echo "Проверяем Docker registry порт ${REGISTRY_PORT}..."
                        if curl -s --max-time 5 http://${NEXUS_HOST}:${REGISTRY_PORT}/v2/ > /dev/null; then
                            echo "✓ Docker registry доступен"
                        else
                            echo "⚠️  Docker registry не отвечает. Возможно нужно настроить в Nexus UI:"
                            echo "    1. Откройте http://${NEXUS_HOST}:${NEXUS_UI_PORT}"
                            echo "    2. Создайте Docker (hosted) репозиторий на порту ${REGISTRY_PORT}"
                            echo "    3. Разрешите anonymous access"
                        fi
                    """
                }
            }
        }

        stage('Docker build') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Собираем Docker образы ==="
                        
                        # Собираем Java сервис
                        echo "Сборка ${IMAGE_RANDOM}..."
                        docker build -t ${NEXUS_HOST}:${REGISTRY_PORT}/${IMAGE_RANDOM}:${VERSION} DogRandomService
                        
                        # Собираем .NET сервис
                        echo "Сборка ${IMAGE_RATING}..."
                        docker build -t ${NEXUS_HOST}:${REGISTRY_PORT}/${IMAGE_RATING}:${VERSION} DogRatingService
                        
                        # Выводим список образов
                        echo "Собранные образы:"
                        docker images | grep "${NEXUS_HOST}:${REGISTRY_PORT}"
                    """
                }
            }
        }

        stage('Push to Nexus registry') {
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Пушим образы в Nexus ==="
                        echo "Registry: ${NEXUS_HOST}:${REGISTRY_PORT}"
                        
                        # Добавляем insecure registry если нужно
                        echo "Настраиваем Docker для работы с insecure registry..."
                        
                        # Логинимся в Nexus Docker registry
                        echo "Логин в Nexus..."
                        if docker login ${NEXUS_HOST}:${REGISTRY_PORT} -u ${NEXUS_USER} -p ${NEXUS_PASSWORD}; then
                            echo "✓ Успешный логин"
                        else
                            echo "⚠️  Ошибка логина. Пробуем без аутентификации..."
                            # Пробуем push без логина (если разрешен anonymous)
                        fi
                        
                        # Пушим образы
                        echo "Push ${IMAGE_RANDOM}..."
                        docker push ${NEXUS_HOST}:${REGISTRY_PORT}/${IMAGE_RANDOM}:${VERSION} || {
                            echo "⚠️  Ошибка push. Возможно нужно добавить insecure registry:"
                            echo '    Добавьте в /etc/docker/daemon.json:'
                            echo '    { "insecure-registries": ["'${NEXUS_HOST}:${REGISTRY_PORT}'"] }'
                            echo '    И перезапустите Docker: sudo systemctl restart docker'
                            exit 1
                        }
                        
                        echo "Push ${IMAGE_RATING}..."
                        docker push ${NEXUS_HOST}:${REGISTRY_PORT}/${IMAGE_RATING}:${VERSION}
                        
                        echo "✓ Образы успешно загружены в Nexus"
                        
                        # Очищаем локальные образы чтобы не занимать место
                        docker rmi ${NEXUS_HOST}:${REGISTRY_PORT}/${IMAGE_RANDOM}:${VERSION} || true
                        docker rmi ${NEXUS_HOST}:${REGISTRY_PORT}/${IMAGE_RATING}:${VERSION} || true
                    """
                }
            }
            
            post {
                failure {
                    echo "❌ Ошибка при работе с Nexus registry"
                    echo "Проверьте:"
                    echo "1. Nexus запущен: docker-compose up в папке nexus"
                    echo "2. Docker registry настроен в Nexus UI"
                    echo "3. Docker daemon настроен на insecure registry"
                }
            }
        }

        stage('Deploy to k8s') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                dir(env.SHARED_WS) {
                    sh """
                        echo "=== Деплой в Kubernetes ==="
                        
                        # Проверяем доступ к Kubernetes
                        kubectl cluster-info || {
                            echo "✗ Нет доступа к Kubernetes"
                            echo "Убедитесь что kubectl настроен"
                            exit 1
                        }
                        
                        # Подготавливаем манифесты с актуальными тегами
                        echo "Подготовка манифестов..."
                        cp ${DEPLOY_PATH}/doggo-deployment.yaml ${DEPLOY_PATH}/doggo-deployment-temp.yaml
                        cp ${DEPLOY_PATH}/doggo-rating-deployment.yaml ${DEPLOY_PATH}/doggo-rating-deployment-temp.yaml
                
                        # Заменяем теги образов
                        sed -i "s|image-doggo-replace|${REGISTRY_MINIKUBE}/${IMAGE_RANDOM}:${VERSION}|g" ${DEPLOY_PATH}/doggo-deployment-temp.yaml
                        sed -i "s|image-rating-replace|${REGISTRY_MINIKUBE}/${IMAGE_RATING}:${VERSION}|g" ${DEPLOY_PATH}/doggo-rating-deployment-temp.yaml
                        
                        echo "Применяем базовые конфигурации..."
                        kubectl apply -f ${DEPLOY_PATH}/configmap.yaml
                        kubectl apply -f ${DEPLOY_PATH}/secret.yaml
                        kubectl apply -f ${DEPLOY_PATH}/nexus-secret.yaml
                        kubectl apply -f ${DEPLOY_PATH}/postgres.yaml
                
                        echo "Ждем запуска PostgreSQL..."
                        sleep 15
                        kubectl wait --for=condition=ready pod -l app=postgres --timeout=60s || echo "PostgreSQL не запустился в timeout"
                
                        echo "Деплоим основные сервисы..."
                        kubectl apply -f ${DEPLOY_PATH}/doggo-deployment-temp.yaml
                        kubectl apply -f ${DEPLOY_PATH}/doggo-rating-deployment-temp.yaml
                
                        # Очищаем временные файлы
                        rm -f ${DEPLOY_PATH}/*-temp.yaml
                        
                        echo "=== Деплой завершен ==="
                        kubectl get pods
                    """
                }
            }
            
            post {
                success {
                    echo "✅ Успешно задеплоено в Kubernetes!"
                }
                failure {
                    echo "❌ Ошибка при деплое в Kubernetes"
                }
            }
        }
        
        stage('Verify deployment') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                sleep 30  // Даем время подняться pod'ам
                sh """
                    echo "=== Проверка деплоя ==="
                    echo "Статус pods:"
                    kubectl get pods
                    
                    echo ""
                    echo "Статус services:"
                    kubectl get services
                    
                    echo ""
                    echo "Проверяем готовность сервисов..."
                    kubectl wait --for=condition=ready pod -l app=doggo --timeout=30s || echo "Doggo service не готов"
                    kubectl wait --for=condition=ready pod -l app=doggo-rating --timeout=30s || echo "Doggo-rating service не готов"
                """
            }
        }
    }

    post {
        always {
            echo "=== [ALWAYS] Финальная очистка ==="
            
            sh """
                # Выходим из Docker registry
                docker logout ${NEXUS_HOST}:${REGISTRY_PORT} 2>/dev/null || true
                echo "Docker logout выполнен"
                
                # Останавливаем Nexus если мы его запускали (опционально)
                # cd ${SHARED_WS}/${NEXUS_PATH} && docker-compose down 2>/dev/null || true
            """
            
            # Сохраняем артефакты если нужно
            archiveArtifacts artifacts: '**/target/*.jar,**/*.log', allowEmptyArchive: true
            
            # Очищаем workspace
            cleanWs()
            echo "Workspace очищен"
        }
        
        success {
            echo "✅ ✅ ✅ PIPELINE УСПЕШНО ЗАВЕРШЕН! ✅ ✅ ✅"
            echo "Сервисы развернуты в Kubernetes"
            echo "Образы сохранены в Nexus: ${NEXUS_HOST}:${REGISTRY_PORT}"
            echo "Для проверки: kubectl get pods, kubectl get services"
        }
        
        failure {
            echo "❌ ❌ ❌ PIPELINE ЗАВЕРШИЛСЯ С ОШИБКОЙ ❌ ❌ ❌"
            echo "Диагностика:"
            echo "1. Nexus: docker-compose up в папке ${NEXUS_PATH}"
            echo "2. Проверьте настройки Docker daemon для insecure registry"
            echo "3. Kubernetes: kubectl cluster-info"
            
            echo ""
            echo "Для ручной очистки выполните:"
            echo "  kubectl delete -f ${SHARED_WS}/${DEPLOY_PATH} --ignore-not-found=true"
            echo "  kubectl delete pvc postgres-data --ignore-not-found=true"
        }
    }
}